package com.bakebuddy.service;

import java.util.List;

import com.bakebuddy.enums.AccountStatus;
import com.bakebuudy.entites.BakeryOwner;

public interface SellerService {
	BakeryOwner getBakeryOwnerProfile(String jwt);// throws BakeryOwnerException;
	BakeryOwner createSeller(BakeryOwner bakeryOwner);// throws BakeryOwnerException;
	BakeryOwner getSellerById(Long id); //throws BakeryOwnerException;
	BakeryOwner getSellerByEmail(String email); //throws BakeryOwnerException;
    List<BakeryOwner> getAllSellers(AccountStatus status);
    BakeryOwner updateSeller(Long id, BakeryOwner BakeryOwner); //throws BakeryOwnerException;
