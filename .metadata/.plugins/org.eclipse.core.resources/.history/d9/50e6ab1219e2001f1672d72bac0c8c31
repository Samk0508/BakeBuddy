package com.bakebuddy.repository;

import java.time.LocalDateTime;
import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;

import com.bakebuudy.entites.Order;

public interface OrderRepository extends JpaRepository<Order,Long> {

    List<Order>findByUserId(Long userId);
    List<Order> findByBakeryOwnerIdOrderByOrderDateDesc(Long bakeryOwnerId);
    List<Order> findByBakeryOwnerIdAndOrderDateBetween(Long bakeryOwnerId,LocalDateTime startDate, LocalDateTime endDate);

}
